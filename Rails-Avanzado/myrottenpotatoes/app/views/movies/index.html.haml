-# add to end of index.html.haml
 
= link_to 'Add new movie', new_movie_path

%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - if @movies
      - @movies.each do |movie|
        %tr
          %td= movie.title 
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)
    - else
      %tr
        %td(colspan="4") No movies available
